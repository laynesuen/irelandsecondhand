/* pages/reset-password/reset-password.wxss */
.reset-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 40rpx;
  background-color: #fff;
}

.header {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.form-container {
  flex: 1;
}

.step-container {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.phone-input {
  display: flex;
  align-items: center;
  background-color: #f5f7fa;
  border-radius: 12rpx;
  padding-left: 30rpx;
}

.country-code {
  color: #333;
  font-size: 30rpx;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 1px solid #e0e0e0;
}

.phone-input .input {
  background-color: transparent;
  padding-left: 0;
}

.verification-input {
  display: flex;
  align-items: center;
}

.verification-input .input {
  flex: 1;
  margin-right: 20rpx;
}

.verification-btn {
  width: 200rpx;
  height: 88rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  flex-shrink: 0;
}

.verification-btn.counting {
  background-color: #a5d6a7;
}

.password-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.next-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(to right, #4caf50, #2e7d32);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  border: none;
}

.next-btn::after {
  border: none;
}

.next-btn.disabled {
  background: linear-gradient(to right, #a5d6a7, #81c784);
  opacity: 0.7;
}

.back-btn {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
}

.footer {
  padding: 40rpx 0;
  text-align: center;
}

.back-to-login {
  font-size: 28rpx;
  color: #4caf50;
  display: inline-block;
  padding: 20rpx 40rpx;
} 