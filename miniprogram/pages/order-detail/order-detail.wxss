/* 容器样式 */
.container {
  padding: 0 0 40rpx 0;
  min-height: 100vh;
  background-color: #f7f7f7;
}

/* 加载中样式 */
.loading-container {
  padding: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #4a6fa1;
  margin: 0 12rpx;
  opacity: 0.6;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 状态卡片样式 */
.status-card {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: relative;
}

.status-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.status-role {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 信息区块样式 */
.info-section {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  color: #333;
  border-left: 8rpx solid #4a6fa1;
  padding-left: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 2;
  text-align: right;
  word-break: break-all;
}

.info-value.price {
  font-weight: 600;
  color: #e64340;
}

.view-trip {
  text-align: right;
  font-size: 28rpx;
  color: #4a6fa1;
  margin-top: 16rpx;
}

/* 用户信息样式 */
.user-info {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.contact-btn {
  display: inline-block;
  padding: 8rpx 24rpx;
  background-color: #4a6fa1;
  color: #fff;
  font-size: 24rpx;
  border-radius: 28rpx;
}

/* 时间线样式 */
.timeline {
  position: relative;
  padding: 20rpx 0;
}

.timeline-item {
  display: flex;
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #4a6fa1;
  z-index: 2;
}

.timeline-line {
  position: absolute;
  left: 7rpx;
  top: 24rpx;
  width: 2rpx;
  height: calc(100% + 40rpx);
  background-color: #ddd;
  z-index: 1;
}

.timeline-content {
  flex: 1;
}

.timeline-status {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.timeline-note {
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
}

/* 操作按钮样式 */
.action-section {
  margin: 40rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.action-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn.confirm {
  background-color: #4a6fa1;
  color: #fff;
}

.action-btn.reject {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.action-btn.complete {
  background-color: #52c41a;
  color: #fff;
}

.action-btn.cancel {
  background-color: #f5f5f5;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

/* 订单不存在样式 */
.empty-container {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.back-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #4a6fa1;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
} 