/* 页面容器 */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 用户信息部分 */
.user-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar, .default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.login-tip {
  font-size: 30rpx;
  color: #666;
  margin: 20rpx 0;
}

.login-btn {
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 40rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
  border: none;
}

/* 功能区域 */
.function-section {
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 10rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.function-icon image {
  width: 100%;
  height: 100%;
}

.function-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 30rpx;
}

.contact-btn {
  background: transparent;
  color: transparent;
  border: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

/* 退出登录按钮 */
.logout-section {
  margin: 60rpx 0;
}

.logout-btn {
  background-color: white;
  color: #f44;
  font-size: 32rpx;
  border-radius: 12rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: none;
}