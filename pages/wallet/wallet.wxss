/* pages/wallet/wallet.wxss */

.wallet-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 钱包头部区域 */
.wallet-header {
  background-color: #ff6a3c;
  padding: 30rpx 30rpx 40rpx;
  color: #fff;
  position: relative;
}

.balance-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.balance-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.balance-actions {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-top: 20rpx;
}

.action-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.5);
  line-height: 1.5;
}

.recharge-btn {
  margin-right: 20rpx;
}

/* 交易记录区域 */
.transactions-section {
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  padding: 20rpx;
  min-height: 800rpx;
}

.tab-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  padding: 0 10rpx;
}

.tab {
  padding: 20rpx 10rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #ff6a3c;
  font-weight: bold;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ff6a3c;
}

.transaction-list {
  padding: 20rpx 0;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.transaction-left {
  display: flex;
  flex-direction: column;
}

.transaction-type {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.transaction-date {
  font-size: 24rpx;
  color: #999;
}

.transaction-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.positive {
  color: #ff6a3c;
}

.negative {
  color: #333;
}

.transaction-status {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 30rpx;
}

.input-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.amount-input {
  flex: 1;
  font-size: 40rpx;
  color: #333;
}

.quick-amount-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.quick-amount-item {
  width: 30%;
  text-align: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.quick-amount-item.selected {
  border-color: #ff6a3c;
  color: #ff6a3c;
  background-color: rgba(255, 106, 60, 0.05);
}

.fee-info {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.fee-item:last-child {
  margin-bottom: 0;
}

.confirm-btn {
  background-color: #ff6a3c;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  text-align: center;
  width: 100%;
}

/* 交易记录操作区域 */
.transactions-actions {
  display: flex;
  justify-content: flex-end;
  padding: 0 24rpx 16rpx;
}

.export-btn {
  background-color: #f2f2f2;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  border: 1rpx solid #ddd;
  line-height: 1.4;
}

/* 交易状态颜色 */
.status-text {
  margin-right: 8rpx;
}

.status-text.success {
  color: #07c160;
}

.status-text.pending {
  color: #ff9800;
}

.status-text.failed {
  color: #ff4040;
}

.arrow-icon {
  font-size: 24rpx;
  color: #999;
  margin-left: 6rpx;
}