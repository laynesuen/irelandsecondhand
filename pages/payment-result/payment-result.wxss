/* pages/payment-result/payment-result.wxss */
.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 状态图标 */
.result-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx 0 40rpx;
}

.result-icon.success {
  background-color: rgba(9, 187, 7, 0.1);
}

.result-icon.fail {
  background-color: rgba(255, 59, 48, 0.1);
}

.result-icon image {
  width: 100rpx;
  height: 100rpx;
}

/* 状态标题 */
.result-title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

/* 状态信息 */
.result-message {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 50rpx;
  padding: 0 40rpx;
}

/* 支付详情 */
.result-details {
  width: 100%;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 0 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item .label {
  color: #666;
  font-size: 28rpx;
}

.detail-item .value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  max-width: 70%;
  text-align: right;
  word-break: break-all;
}

/* 底部按钮 */
.result-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 20rpx;
}

.action-btn {
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.action-btn.primary {
  background-color: #07c160;
  color: #ffffff;
}

.action-btn.secondary {
  background-color: #ffffff;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.action-btn {
  background-color: #f5f5f5;
  color: #666;
}

/* 加载进度条 */
.loading-progress {
  width: 100%;
  margin: 20rpx 0 40rpx;
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background-color: #eee;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress {
  height: 100%;
  background-color: #ff9800;
  border-radius: 8rpx;
  transition: width 0.3s;
}

.progress-text {
  color: #ff9800;
  font-size: 24rpx;
  min-width: 60rpx;
  text-align: right;
} 