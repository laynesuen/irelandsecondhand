/* pages/system-notifications/system-notifications.wxss */

.notification-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 搜索框 */
.search-bar {
  padding: 30rpx 30rpx 20rpx;
  background-color: #ffffff;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  border-radius: 36rpx;
  padding: 12rpx 24rpx;
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  color: #333;
}

/* 功能操作栏 */
.action-bar {
  display: flex;
  justify-content: flex-end;
  padding: 16rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-btn {
  padding: 8rpx 24rpx;
  background-color: #f8f8f8;
  border-radius: 32rpx;
  font-size: 24rpx;
  color: #666;
}

.action-btn:active {
  background-color: #f0f0f0;
}

/* 通知列表 */
.notification-list {
  flex: 1;
  padding-bottom: 30rpx;
}

.notification-item {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: background-color 0.2s;
}

.notification-item:active {
  background-color: #f9f9f9;
}

.notification-item.unread {
  background-color: #f7fffa;
}

.notification-icon {
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.notification-icon.type-0 {
  background-color: #e1f5fe;
}

.notification-icon.type-1 {
  background-color: #e8f5e9;
}

.notification-icon.type-2 {
  background-color: #fff8e1;
}

.notification-icon.type-3 {
  background-color: #ffebee;
}

.notification-icon image {
  width: 40rpx;
  height: 40rpx;
}

.notification-content {
  flex: 1;
  overflow: hidden;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.notification-title {
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}

.notification-time {
  color: #999;
  font-size: 24rpx;
}

.notification-body {
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.unread-indicator {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #f44336;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 加载更多和没有更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

.loading-more:active {
  background-color: #f5f5f5;
} 