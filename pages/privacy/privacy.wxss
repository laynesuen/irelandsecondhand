/* pages/privacy/privacy.wxss */
.privacy-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.privacy-header {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.header-desc {
  font-size: 24rpx;
  color: #999999;
}

.settings-section {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
  padding: 20rpx 30rpx;
}

.menu-list {
  background-color: #ffffff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  flex: 1;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
  display: block;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999999;
}

.picker-value {
  font-size: 28rpx;
  color: #999999;
  margin-right: 10rpx;
}

.arrow {
  color: #999999;
  font-size: 24rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
  margin-right: -10rpx;
}

/* 选择器样式 */
picker {
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
}

picker:active {
  background-color: #f5f5f5;
}