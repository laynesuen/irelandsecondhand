<view class="container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">支付密码</text>
      <input type="password" maxlength="6" placeholder="请输入6位数字支付密码" bindinput="onPasswordInput" value="{{password}}" />
    </view>
    
    <view class="form-item">
      <text class="label">确认密码</text>
      <input type="password" maxlength="6" placeholder="请再次输入支付密码" bindinput="onConfirmPasswordInput" value="{{confirmPassword}}" />
    </view>
  </view>

  <view class="tips">
    <text class="tip-text">温馨提示：</text>
    <text class="tip-item">1. 支付密码为6位数字</text>
    <text class="tip-item">2. 请妥善保管，不要泄露给他人</text>
    <text class="tip-item">3. 建议定期更换支付密码</text>
  </view>

  <view class="button-group">
    <button class="submit-btn" bindtap="submitSet">确认设置</button>
  </view>
</view> 