/* 容器样式 */
.container {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 加载样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.loading {
  display: flex;
  justify-content: center;
}

.loading-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #07c160;
  margin: 0 10rpx;
  animation: dot-animation 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes dot-animation {
  0%, 80%, 100% { 
    transform: scale(0);
  } 
  40% { 
    transform: scale(1.0);
  }
}

/* 用户卡片样式 */
.user-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.order-id {
  font-size: 26rpx;
  color: #999;
}

/* 评分部分样式 */
.section {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.rating-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.rating-slider {
  flex: 1;
  margin: 0 20rpx;
}

.rating-tips {
  font-size: 24rpx;
  color: #999;
}

.rating-value {
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #07c160;
}

/* 标签样式 */
.tag-container {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 16rpx 30rpx;
  background-color: #f1f1f1;
  color: #666;
  border-radius: 40rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.tag.selected {
  background-color: #e6f7ef;
  color: #07c160;
  border: 1rpx solid #07c160;
}

/* 评价内容样式 */
.textarea-container {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  position: relative;
}

.review-textarea {
  width: 100%;
  height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.word-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 提交按钮样式 */
.btn-container {
  margin-top: 60rpx;
  margin-bottom: 100rpx;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
  width: 100%;
  border: none;
}

.submit-btn[disabled] {
  background-color: #a0e5c1;
  color: white;
}

/* 错误样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.error-message {
  font-size: 30rpx;
  color: #f44;
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #f5f5f5;
  color: #333;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  border: 1rpx solid #ddd;
} 