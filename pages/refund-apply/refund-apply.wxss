/* pages/refund-apply/refund-apply.wxss */
.refund-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 订单信息 */
.order-info {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.info-content {
  padding: 0 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  color: #666;
  font-size: 28rpx;
}

.info-item .value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 退款表单 */
.refund-form {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 120rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.form-item {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.form-item.vertical {
  flex-direction: column;
  align-items: flex-start;
}

.form-item .label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.form-item .label.required::before {
  content: '*';
  color: #ff3b30;
  margin-right: 4rpx;
}

.form-item .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-item.vertical .value {
  width: 100%;
  margin-top: 20rpx;
}

/* 选择器样式 */
.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  color: #333;
}

.picker.placeholder {
  color: #999;
}

/* 金额输入框 */
.amount-input {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 80rpx;
}

.amount-input .currency {
  color: #333;
  font-size: 32rpx;
  margin-right: 8rpx;
}

.amount-input input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.input-placeholder {
  color: #999;
}

/* 文本域样式 */
textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea-counter {
  text-align: right;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传 */
.upload-area {
  width: 100%;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-item, .upload-btn {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom-left-radius: 8rpx;
}

.upload-btn {
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.icon-add {
  font-size: 60rpx;
  line-height: 1;
  margin-bottom: 10rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background-color: #ccc;
}

/* 公共卡片样式 */
.order-card, .refund-form, .refund-notice {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 卡片标题 */
.order-header, .form-header, .notice-header {
  margin-bottom: 20rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #07c160;
}

.order-label, .form-label, .notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 订单信息项 */
.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-item:last-child {
  border-bottom: none;
}

.item-label {
  color: #666;
}

.item-value {
  color: #333;
  max-width: 60%;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-value.price {
  color: #ff4d4f;
  font-weight: bold;
}

/* 退款说明文本框 */
.refund-description {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  color: #333;
}

.description-counter {
  align-self: flex-end;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 上传凭证区域 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  width: 100%;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 退款须知 */
.notice-body {
  padding: 10rpx 0;
}

.notice-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
} 