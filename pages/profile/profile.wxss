/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 用户信息区域 - 闲鱼风格 */
.user-info {
  background: linear-gradient(135deg, #ff6e02, #ff9e01);
  padding: 40rpx 30rpx 50rpx;
  margin-bottom: 20rpx;
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.user-info::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  right: -60rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 1;
}

.user-info::before {
  content: '';
  position: absolute;
  top: -40rpx;
  left: -40rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  z-index: 1;
}

.user-header {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
}

.user-details {
  flex: 1;
  position: relative;
  z-index: 2;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.user-stats {
  display: flex;
  margin-top: 16rpx;
}

.stat-item {
  margin-right: 30rpx;
  text-align: center;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.login-tip {
  font-size: 36rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  display: block;
  font-weight: 500;
}

.login-prompt {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-actions {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 3;
}

.edit-btn {
  font-size: 24rpx;
  color: #ffffff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 服务区域 - 闲鱼风格网格 */
.service-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #ff6e02;
  border-radius: 4rpx;
}

.service-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.service-text {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  font-weight: bold;
}

/* 菜单卡片 - 闲鱼风格 */
.menu-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #ff6e02;
  border-radius: 4rpx;
}

/* 订单状态网格 */
.order-status-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.status-badge {
  position: absolute;
  top: -8rpx;
  right: 10rpx;
  background-color: #ff4d4f;
  color: white;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
  font-weight: bold;
}

/* 菜单列表 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-section {
  padding: 40rpx 20rpx;
}

.logout-btn {
  background-color: #fff;
  color: #ff4f4f;
  border: 1rpx solid #ff4f4f;
  font-size: 30rpx;
  border-radius: 12rpx;
}